<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login_bg"
    android:layout_height="match_parent"
    tools:context="com.reryde.provider.Activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@null"
            android:padding="@dimen/_10sdp"
            android:visibility="gone"
            android:src="@drawable/back_white" />


        <com.reryde.provider.Utilities.MyBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60sdp"
            android:text="Start Earning Money"
            android:textAlignment="center"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lnrBegin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                app:contentColor="@color/text_color_white"
                app:defaultCode="1"
                app:hideNameCode="true"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.reryde.provider.Utilities.MyEditText
                    android:id="@+id/mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:backgroundTint="@color/text_color_white"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:textColor="@color/text_color_white"
                    android:maxLines="1"
                    android:textAlignment="viewStart"
                    android:visibility="visible"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <com.reryde.provider.Utilities.MyBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="We 'll send you a text to verify your number"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/_12sdp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <com.reryde.provider.Utilities.MyButton
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:background="@color/colorPrimary"
            android:text="Confirm"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/_15sdp" />

        <com.reryde.provider.Utilities.MyBoldTextView
            android:id="@+id/signup_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Don't Have an Account? Signup"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>


</RelativeLayout>
