<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/free_run_layout"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.reryde.app.Activities.FreeRides">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:tint="@color/text_color_white"
                android:padding="5dp"
                android:src="@drawable/back_icon" />

            <com.reryde.provider.Utilities.MyBoldTextView
                android:id="@+id/lblTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Referral bonus"
                android:textColor="@color/text_color_white"
                android:textSize="18sp" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.reryde.provider.Utilities.MyTextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:text="Refer your friends to drive !"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textSize="@dimen/_18sdp"
                        android:textColor="@color/black_text_color"
                        android:layout_height="wrap_content" />
                    <com.reryde.provider.Utilities.MyBoldTextView
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textStyle="normal"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:text="Invite your friend to drive with ReRyde and receive a referral bonus of up to $100."
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content" />

                    <com.reryde.provider.Utilities.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textStyle="normal"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:text="Share Your Invite Code"
                        android:textSize="@dimen/_13sdp"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="@drawable/square_invite"
                        android:layout_height="wrap_content">
                        <com.reryde.provider.Utilities.MyBoldTextView
                            android:layout_width="wrap_content"
                            android:text="ssddjdfkkjfdk"
                            android:id="@+id/referal_code_id"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:padding="@dimen/_10sdp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/select_share"
                            android:layout_width="25dp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_toLeftOf="@+id/select_contact"
                            android:src="@drawable/share"
                            android:tint="@color/colorPrimary"
                            android:layout_height="25dp" />
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:id="@+id/select_contact"
                            android:background="@drawable/ic_contacts"
                            android:src="@drawable/ic_contacts"
                            android:tint="@color/colorPrimary"
                            android:layout_height="25dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_height="wrap_content">
                        <com.reryde.provider.Utilities.MyBoldTextView
                            android:layout_width="wrap_content"
                            android:text="Referral earning"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textStyle="bold"
                            android:textSize="@dimen/_15sdp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_height="wrap_content" />
                        <com.reryde.provider.Utilities.MyBoldTextView
                            android:layout_width="wrap_content"
                            android:text="$0"
                            android:id="@+id/referal_amount_txt"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textStyle="bold"
                            android:textSize="@dimen/_15sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorPrimary"
                    android:text="Invite friends"
                    android:id="@+id/invite_friends"
                    android:textColor="@color/text_color_white"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </ScrollView>


    </LinearLayout>
</FrameLayout>
